  "instructions_to_main_agent": {
    "general": [
      "Implement a 'High-Contrast Dark Mode' by default.",
      "Use 'Chivo' for all headings and 'JetBrains Mono' for all code-related text.",
      "Ensure the Code Editor uses the Monaco Editor component.",
      "The Leaderboard must be real-time; use a clean table layout with 'Control Room' density.",
      "Use the provided image URLs for specific sections (Hero, Auth, Leaderboard).",
      "Do not use gradients for text; keep it legible and high-contrast.",
      "Add 'data-testid' to all interactive elements."
    ],
    "pages": {
      "landing": "Use the 'Tetris Grid' layout. Hero section should use the abstract blue light image as a background with a dark overlay.",
      "dashboard": "Use the 'Control Room Grid'. Dense, data-heavy, no wasted space.",
      "editor": "Full-screen height. Minimal distractions. Sidebar for problem description, main area for code.",
      "leaderboard": "Table-based layout. Highlight the top 3 users with special styling (Gold/Silver/Bronze accents)."
    },
    "components": {
      "toast": "Use 'sonner' for notifications.",
      "dialogs": "Use Shadcn Dialog for forms and confirmations.",
      "charts": "Use Recharts (via Shadcn Charts) for submission history and stats."
    }
  },
  "universal_guidelines": [
    "Avoid 'AI slop' aesthetics (generic centered layouts, excessive gradients).",
    "Create depth through layered design elements (z-index, subtle borders).",
    "Use glassmorphism effects for sticky headers (backdrop-blur-xl).",
    "Do not apply universal transitions (transition: all).",
    "Do not center-align the app container globally.",
    "Always use modern button styles (pill or sharp).",
    "Never use AI emojis as icons.",
    "Every interaction needs micro-animations.",
    "Use generous spacing (2-3x standard).",
    "Add subtle grain textures/noise overlays."
  ]
