{
  "design_system": {
    "identity": {
      "name": "CodeGolf IITM",
      "archetype": "Swiss & High-Contrast (Dark Mode Variant)",
      "vibe": "Professional, Precision, Competitive, Minimalist",
      "emotional_tone": "Focus, Clarity, Speed"
    },
    "typography": {
      "fonts": {
        "headings": {
          "family": "Chivo",
          "weights": ["300", "900"],
          "usage": "Headings, Hero Text, Big Numbers"
        },
        "body": {
          "family": "Manrope",
          "weights": ["400", "500", "600"],
          "usage": "UI Text, Paragraphs, Labels"
        },
        "code": {
          "family": "JetBrains Mono",
          "weights": ["400", "700"],
          "usage": "Code Editor, Snippets, Character Counts"
        }
      },
      "rules": [
        "Headings > 32px must use tracking-tight",
        "Overlines must be uppercase + tracking-widest + text-xs",
        "Code font must be used for all metrics (time, score, rank)"
      ]
    },
    "colors": {
      "palette": {
        "background": {
          "default": "#09090b",
          "paper": "#18181b",
          "subtle": "#27272a"
        },
        "foreground": {
          "default": "#fafafa",
          "muted": "#a1a1aa",
          "inverse": "#09090b"
        },
        "primary": {
          "default": "#3b82f6",
          "hover": "#2563eb",
          "foreground": "#ffffff"
        },
        "secondary": {
          "default": "#f59e0b",
          "foreground": "#000000"
        },
        "accent": {
          "default": "#22c55e",
          "foreground": "#000000"
        },
        "destructive": {
          "default": "#ef4444",
          "foreground": "#ffffff"
        },
        "border": {
          "default": "#27272a",
          "active": "#3f3f46"
        }
      },
      "gradients": {
        "hero_glow": "radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.15) 0%, transparent 50%)",
        "card_hover": "linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0) 100%)"
      }
    },
    "layout": {
      "spacing_scale": ["p-1", "p-2", "p-4", "p-6", "p-8", "p-12", "p-16", "p-24", "p-32"],
      "grids": {
        "landing": "Tetris Grid (Asymmetrical, Artful)",
        "dashboard": "Control Room Grid (Dense, Functional, 100% Height)"
      },
      "container": {
        "max_width": "max-w-7xl",
        "padding": "px-6 md:px-12"
      }
    },
    "components": {
      "buttons": {
        "style": "Sharp or slightly rounded (rounded-md)",
        "interaction": "Scale down slightly on click (active:scale-95)",
        "shadow": "shadow-lg shadow-primary/20 on primary buttons"
      },
      "cards": {
        "style": "Flat background (bg-zinc-900), 1px border (border-zinc-800)",
        "hover": "border-zinc-700 transition-colors duration-200"
      },
      "inputs": {
        "style": "bg-zinc-950 border-zinc-800 focus:ring-2 focus:ring-primary/50"
      },
      "glassmorphism": {
        "usage": "Sticky Headers, Modals",
        "classes": "bg-black/70 backdrop-blur-xl border-b border-white/10"
      }
    },
    "visual_enhancers": {
      "textures": "Subtle noise overlay on background (opacity 0.03)",
      "borders": "1px solid borders with low opacity (border-white/10)",
      "shadows": "Glow effects rather than drop shadows (shadow-[0_0_20px_rgba(59,130,246,0.3)])"
    },
    "motion": {
      "library": "framer-motion",
      "transitions": {
        "default": "ease-out duration-200",
        "hover": "ease-in-out duration-150"
      },
      "micro_interactions": [
        "Button hover scale",
        "Input focus ring expansion",
        "List item entrance stagger"
      ]
    },
